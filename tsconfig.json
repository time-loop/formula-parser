{
    "exclude": ["node_modules", "es", "lib", "loader", "test", "src/grammar-parser/grammar-parser.js"],
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "CommonJS",
        "target": "ES2022",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "useDefineForClassFields": false,
        "esModuleInterop": true,
        "strict": false, // leaving this as false for now until we can convert everything to ts
        "allowJs": true,
        "checkJs": true
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.spec.json"
            }
        }
    }
}
